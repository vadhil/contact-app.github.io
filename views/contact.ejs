<div class="row justify-content-center">
  <div class="col-12 col-md-8 ">
    <div class="">
    </div>
    <table  class="table  ">
      <thead >
        <tr>
          <th scope="col">id</th>
          <th scope="col">name</th>
          <th scope="col">phone</th>
          <th scope="col">email</th>
          <th scope="col">info</th>
        </tr>
      </thead>
      <tbody>
        <% if (contacts.length === 0) { %>
            <tr>
              <td colspan="5">No contacts</td>
            </tr>
              
        <% } %>
        
          <% contacts.forEach((contact, i) => { i++ %>
          <tr>
          <th scope="row"><%= i %></th>
          <td><%= contact.name %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.email %></td>
          <td>
            <div class="bg-dark rounded-pill text-center ">
              <a style="text-decoration: none;" class="text-warning  p-1 " href=" ./contact/<%= contact.name %>">edit</a>
            </div>
          </td>
        

  
          </tr>
          <% }) %>
          
          <tr >
<th scope="col"></th>
          <th scope="col"></th>
          <th scope="col">
            <td class="mx-auto">
              <a class="text-warning p-1" href="/contact/add">add contact</a>
            </td>
          </th>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"></th>
          </tr>
          
          
      </tbody>
    </table>
  </div>
</div>

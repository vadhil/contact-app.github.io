<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    <h2>your name is not in the list</h2>
                    <a href="/contact" class="card-link">&laquo; kembali ke contact</a> 

                  </div>
            <% } else { %>
                <h2>detail contact</h2>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                      <h5 class="card-title"><%= contact.name %></h5>
                      <h6 class="card-subtitle mb-2 "><%= contact.phone %></h6>
                      <p class="card-text"><%= contact.email %></p>
                      <a href="/contact" class="card-link">&laquo; kembali ke contact</a> 
                    </div>
                  </div>
            <% } %>
            
        </div>
    </div>
</div>